<?xml version="1.0" encoding="utf-8"?><!-- 루트 레이아웃을 하나로 묶음 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 첫 번째 LinearLayout -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/visibleBtn1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#CC99FF"
                android:text="김갑주" />


            <Button
                android:id="@+id/visibleBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUTTON2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUTTON3" />

        </LinearLayout>

    </LinearLayout>

    <!-- 두 번째 LinearLayout -->
    <LinearLayout
        android:id="@+id/sub_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/missMaxim2023"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="250dp"
                android:maxHeight="250dp"
                android:src="@drawable/missmaxim1"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
